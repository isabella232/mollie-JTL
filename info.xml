                <Name>lbl_cardHolder</Name>
                <Description></Description>
                <VariableLocalized iso="GER">Karteninhaber:</VariableLocalized>
                <VariableLocalized iso="ENG">Card holder:</VariableLocalized>
            </Variable>
            <Variable>
                <Name>lbl_cardNumber</Name>
                <Description></Description>
                <VariableLocalized iso="GER">Kartennummer:</VariableLocalized>
                <VariableLocalized iso="ENG">Card number:</VariableLocalized>
            </Variable>
            <Variable>
                <Name>lbl_expiryDate</Name>
                <Description></Description>
                <VariableLocalized iso="GER">Ablaufdatum:</VariableLocalized>
                <VariableLocalized iso="ENG">Expiry date:</VariableLocalized>
            </Variable>
            <Variable>
                <Name>lbl_varificationCode</Name>
                <Description></Description>
                <VariableLocalized iso="GER">CVC:</VariableLocalized>
                <VariableLocalized iso="ENG">CVC:</VariableLocalized>
